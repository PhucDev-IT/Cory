<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingEnd="6dp"
    android:elevation="6dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/primaryKeyColor"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_marginHorizontal="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_free_ship"/>
        <TextView
            android:id="@+id/idVoucher"
            android:layout_marginBottom="4dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="DHJSEGA"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giảm 12%"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvDescription"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dành cho đơn tối thiểu 0 đồng"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn lại:"/>
            <TextView
                android:id="@+id/tvQuantity"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="30"
                android:textStyle="bold"
                android:textColor="#02e80e"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvTimeUse"
            android:textSize="14sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Thời gian:" />

    </LinearLayout>
    <RadioButton
        android:id="@+id/rdnButton"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
</LinearLayout>