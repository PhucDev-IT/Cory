<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffe69c"/>
            <size android:height="20dp"
                android:width="100dp"/>
        </shape>
    </item>
    <item android:width="13dp"
        android:height="13dp"
        android:top="6dp"
        android:left="-6dp">
        <rotate android:fromDegrees="45">
            <shape>
                <solid android:color="#ebedf0"/>
            </shape>
        </rotate>
    </item>

    <item android:width="13dp"
        android:height="13dp"
        android:top="6dp"
        android:gravity="right"
        android:right="-6dp">
        <rotate android:fromDegrees="45">
            <shape>
                <solid android:color="#ebedf0"/>
            </shape>
        </rotate>
    </item>
</layer-list>